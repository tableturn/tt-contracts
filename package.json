{
  "name": "tt-contracts",
  "version": "0.0.1",
  "description": "The Consilience Ventures smart contracts source code.",
  "author": "Pierre Martin<hickscorp@gmail.com>",
  "license": "MIT",
  "main": "truffle-config.js",
  "scripts": {
    "postinstall": "yarn build",
    "build": "yarn build:contracts",
    "build:contracts": "truffle compile",
    "postbuild:contracts": "./scripts/exportABIs.js",
    "build:types": "typechain --target truffle-v5 --outDir 'types/truffle-contracts' './build/**/*.json'",
    "console": "truffle console --network $NETWORK",
    "pretest": "yarn build && yarn build:types",
    "test": "truffle test",
    "coverage": "truffle run coverage --network coverage"
  },
  "dependencies": {
    "@openzeppelin/cli": "^2.5.2",
    "@openzeppelin/contracts": "^2.4.0",
    "@openzeppelin/contracts-ethereum-package": "^2.5.0",
    "@openzeppelin/upgrades": "^2.5.2",
    "@truffle/contract": "^4.0.35",
    "truffle": "^5.0.34",
    "truffle-hdwallet-provider": "1.0.17"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "web3-eth-contract": "^1.3.0",
    "chai": "^4.2.0",
    "dotenv": "^8.0.0",
    "eth-gas-reporter": "^0.2.19",
    "ganache-cli": "^6.12.1",
    "mocha": "^8.2.1",
    "solc": "^0.5.9",
    "solidity-coverage": "^0.7.11",
    "truffle-typings": "^1.0.7",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typechain": "^4.0.0",
    "@typechain/truffle-v5": "^3.0.0",
    "typescript": "^4.0.5",
    "typestrict": "^1.0.2",
    "web3": "^1.3.0"
  }
}